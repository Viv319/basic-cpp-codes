#include<bits/stdc++.h>
#include<iostream>
#include<string>
using namespace std;


struct s
{
	public:
	string s1;
	string ph1;
	int marks;
	int roll_no;
	
	public:
		void insert()
		{
			cout<<"enter name\n";
			getline(cin,s1);
			cout<<"\nenter number\n";
			getline(cin,ph1);
			cout<<"\nenter marks\n";
			cin>>marks;
			
			cout<<"\nenter roll no\n";
			cin>>roll_no;
			
		}
		
		void show()
		{
			cout<<"name is\n"<<s1;
			
			cout<<"\n number is \n"<<ph1;
			
			cout<<"\nmarks is\n"<<marks;
				
			cout<<"\n roll no is\n"<<roll_no;
			
		}
}n;
int main()
{
	
	n.insert();
	n.show();
	
}
